<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkTimer20" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CardView.rounded" parent="CardView">
        <item name="cardCornerRadius">25dp</item>
    </style>
    <color name="cardViewSelected">#979DC5</color>
    <color name="cardViewBg">@color/cardview_light_background</color>

    <style name="RoundedButton50dp">
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="minHeight">50dp</item>
        <item name="maxHeight">50dp</item>
    </style>
    <style name="RoundedButton30dp">
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="minHeight">30dp</item>
        <item name="maxHeight">30dp</item>
    </style>

    <color name="progressBg">@color/light_darker_bg</color>
</resources>