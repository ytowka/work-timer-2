<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkTimer20" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/on_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

       <!-- <item name="dialogTheme">@style/roundedDialog</item>-->
        <!-- Customize your theme here. -->
    </style>
    <style name="CardView.rounded" parent="CardView">
        <item name="cardCornerRadius">25dp</item>
    </style>
    <color name="colorOnSurface">@color/on_dark</color>
    <style name="roundedDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="background">@drawable/dialog_bg</item>
        <item name="android:colorPrimary">@color/on_dark</item>
        <item name="android:textColor">@color/on_dark</item>
    </style>

    <color name="cardViewSelected">#899DCA</color>
    <color name="cardViewBg">@color/cardview_dark_background</color>
    <color name="progressBg">@color/dark_lighter_bg</color>
</resources>