<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/notif_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notif_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/notif_text_title"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/notif_text_title" />

    <ImageButton
        android:id="@+id/notif_buton_pause"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_rounded25"

        android:src="@drawable/ic_pause"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notif_text_title" />

    <ImageButton
        android:id="@+id/notif_buton_prev"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_rounded25"
        android:src="@drawable/ic_skip_previous"
        android:layout_marginEnd="16dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/notif_buton_pause"
        app:layout_constraintTop_toTopOf="@+id/notif_buton_pause" />

    <ImageButton
        android:id="@+id/notif_buton_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_rounded25"
        android:src="@drawable/ic_skip_next"
        android:layout_marginStart="16dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/notif_buton_pause"
        app:layout_constraintTop_toTopOf="@+id/notif_buton_pause" />

</androidx.constraintlayout.widget.ConstraintLayout>